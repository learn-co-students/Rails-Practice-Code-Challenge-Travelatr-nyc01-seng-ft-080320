<h1> New Blogger </h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
        <%= message %> <br>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<br>
<%= f.label :age %>
<%= f.number_field :age %>
<br>
<br>
<%= f.label :bio %>
<%= f.text_area :bio %>
<br>
<br>
<%= f.submit %>

<% end %>