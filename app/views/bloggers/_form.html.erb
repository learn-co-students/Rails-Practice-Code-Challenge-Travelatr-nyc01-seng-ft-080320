<%if flash[:my_errors]%>
    <% flash[:my_errors].each do |error|%>
    <p>Error:<%= error %></p>
    <%end%>
<%end%>

<h1>Blogger Form</h1>

<%= form_for @blogger do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :age %>
<%= f.number_field :age %>
<%= f.label :bio %>
<%= f.text_field :bio %>
<%= f.submit%>
<%end%>