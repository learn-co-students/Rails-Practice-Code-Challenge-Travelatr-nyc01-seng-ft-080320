<%if flash[:my_errors]%>
    <% flash[:my_errors].each do |error|%>
    <p>Error:<%= error %></p>
    <%end%>
<%end%>


<h1>Edit Post</h1>
<%= form_for @post do |f|%>
<%= f.label :title%>
<%= f.text_field :title%>

<%= f.label :content%>
<%= f.text_field :content%>

<%= f.label :blogger_id %>
<%=f.collection_select :blogger_id, Blogger.all, :id, :name%>

<%= f.label :destination_id %>
<%=f.collection_select :destination_id, Destination.all, :id, :name%>

<%= f.submit%>
<%end%>